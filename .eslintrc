{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    // "id-length": 0,
    // "indent": [2, 4, {"SwitchCase": 1}],
    "new-cap": 0, // because immutable uses Map, List, etc. without 'new'. Also Radium.
    // "no-shadow": 0,
    "no-console": 0,
    "no-return-assign": 0,
    "no-unused-expressions": 0,
    // "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    // "react/sort-comp": 0,
    // "react/jsx-boolean-value": 0,
    // "spaced-comment": 0,
    "object-curly-spacing": [2, "never"]
  },
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "fetch": true,
    "performance": true,
    "firebase": true,
    "MALLA_CONSTANTS": true,
    "MALLA_TEXT": true,
    "FB": true
  }
}
